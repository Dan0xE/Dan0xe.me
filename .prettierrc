{
  "plugins": ["prettier-plugin-go-template", "prettier-plugin-toml"],
  "overrides": [
    {
      "files": ["*.html"],
      "options": {
        "parser": "go-template",
        "goTemplateBracketSpacing": true,
        "semi": true,
        "singleQuote": true
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "proseWrap": "always",
        "tabWidth": 2
      }
    },
    {
      "files": ["*.toml"],
      "options": {
        "parser": "toml",
        "tabWidth": 2
      }
    }
  ]
}
